{
    source: {
        type: "git",
        url: "https://github.com/cboxdoerfer/ddb_waveform_seekbar.git",
        patches: [
            "make.patch",
            ]
    },
    make: {
        type: "make",
        root: "/",
        ENV: [
            { GTK2_CFLAGS: "$GTK216_CFLAGS" },
            { GTK2_LIBS: "$GTK216_LIBS" },
            { GTK3_CFLAGS: "$GTK300_CFLAGS" },
            { GTK3_LIBS: "$GTK300_LIBS" },
            { SQLITE_LIBS: "$LIBDIR/lib/libsqlite3.a" },

        ],
        out: [
            "src/gtk2/ddb_misc_waveform_GTK2.so",
            "src/gtk3/ddb_misc_waveform_GTK3.so"
            ]
    }
}
